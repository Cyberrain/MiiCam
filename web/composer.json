        "monolog/monolog": "^1.17",
        "slim/slim": "^3.11",
        "vlucas/phpdotenv": "^2.5"
    },
    "config": {
        "preferred-install": "dist"
    },
    "autoload": {
        "files": [
	    "libs/camera.php",
    	    "libs/leds.php",
  	    "libs/logviewer.php",
