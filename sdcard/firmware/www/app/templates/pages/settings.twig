{% extends "base/layout.twig" %}

{% block body %}
    <div style="padding:0 16px;">
        <h1>Camera Settings - Not Working yet</h1>
        <table>
            <tr>
                <td>Status Light</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" >
                        <span class="slider"></span>
                    </label>
                </td>
            </tr>

            <tr>
                <td>Night vision</td>
                <td>
                   <label class="nice-select">
                       <select>
                           <option selected>automatic</option>
                           <option >off</option>
                           <option >on</option>
                       </select>
                   </label>
                </td>
            </tr>
        </table>

        <h1>System Settings</h1>
        <table>
            <tr>
                <td>Prevent online updates</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider"></span>
                    </label>
                </td>
            </tr>

            <tr>
                <td>Time Zone</td>
                <td>
                    <label class="nice-select">
                        <select>
                            {% set options = ["GMT", "GMT+0", "GMT+1", "GMT+10", "GMT+11", "GMT+12", "GMT+2", "GMT+3", "GMT+4", "GMT+5",
                                              "GMT+6", "GMT+7", "GMT+8", "GMT+9", "GMT-0", "GMT-1", "GMT-10", "GMT-11", "GMT-12", "GMT-13",
                                              "GMT-14", "GMT-2", "GMT-3", "GMT-4", "GMT-5", "GMT-6", "GMT-7", "GMT-8", "GMT-9", "GMT0",
                                              "Greenwich", "UCT", "elected>UTC", "Universal", "Zulu"] %}
                            {%- for option in options -%}
                            <option>{{ option }}</option>
                            {%- endfor -%}
                        </select>
                    </label>
                </td>
            </tr>
        </table>

        <h1>Service Settings</h1>
        <table>
          {% set services = ["Xiaomi Cloud Services", "RTSP Streaming Server", "Telnet Server", "SSH Server", "HTTP Server", "FTP Server", "SAMBA Server"] %}
          {%- for service in services -%}
          <tr>
            <td>{{ service }}</td>
            <td>
              <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
              </label>
            </td>
          </tr>
         {%- endfor %}

        </table>
    <div>
{% endblock %}
